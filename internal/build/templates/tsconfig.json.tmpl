{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./build/typescript",
    "rootDir": "./scripts",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./scripts/*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./app/*"]
    }
  },
  "include": [
    "scripts/**/*",
    "components/**/*",
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}